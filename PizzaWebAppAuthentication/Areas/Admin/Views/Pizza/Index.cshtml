@model IEnumerable<PizzaWebAppAuthentication.Models.AppModels.Pizza>

@{
    ViewData["Title"] = "Pizza";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Пиццы</h1>

<p>
    <a asp-action="Create">Добавить новую пиццу</a>
</p>
<div style="display: flex; flex-direction: column; height: 100%">
    <table class="table" style="flex-grow: 1">
        <thead>
            <tr>
                <th>Название</th>
                <th>Цена, р</th>
                <th>Изображение</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Price.ToString("C2")
                    </td>
                    <td>
                        <img src="images/@item.ImagePath" width="200" alt="" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="confirmDeletion">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
